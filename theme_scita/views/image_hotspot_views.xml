<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List view -->
    <record id="view_image_hotspot_list" model="ir.ui.view">
        <field name="name">image.hotspot.list</field>
        <field name="model">image.hotspot</field>
        <field name="arch" type="xml">
            <list string="Image Hotspot List View">
                <field name="name"/>
                <field name="image" widget="image" options="{'size': (64, 64)}"/>
                <field name="hotspot_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
   <record id="view_image_hotspot_form" model="ir.ui.view">
    <field name="name">image.hotspot.form</field>
    <field name="model">image.hotspot</field>
    <field name="arch" type="xml">
        <form string="Image Hotspot">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="image" widget="image" options="{'size': (64, 64)}"/>
                </group>
                <notebook>
                    <page string="Hotspot Points">
                        <field name="hotspot_ids">
                            <form>
                                <group>
                                    <field name="x"/>
                                    <field name="y"/>
                                    <field name="link" widget="url"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
   </record>

    <!-- Action -->
    <record id="action_image_hotspot" model="ir.actions.act_window">
        <field name="name">Image Hotspots</field>
        <field name="res_model">image.hotspot</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="views" eval="[
            (ref('theme_scita.view_image_hotspot_list'), 'list'),
            (ref('theme_scita.view_image_hotspot_form'), 'form')
        ]"/>
    </record>
    <menuitem id="menu_image_hotspot_root" parent="website.menu_site" sequence="10" action="theme_scita.action_image_hotspot"/>
</odoo>