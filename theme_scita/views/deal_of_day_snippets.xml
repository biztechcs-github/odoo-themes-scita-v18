<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--  Retail Offer Snippet -->
    <template id="retial_deal_of_day_banner_snippet_1" name="Deal of the Day Snippet 1">
        <section class="retial_deal_of_day_banner_snippet_1" data-disp="deal_days">
            <div class='container'>
                <div class="row s_nb_column_fixed sct_row">
                    <div class="col-md-6 col-lg-4 col-xl-5 sct_deal_img_wrapper">
                        <div class="sct_deal_img">
                            <a href="/shop">
                                <img src="/theme_scita/static/src/img/scita-placeholder.png" class="img img-fluid" alt="Image"/>
                                <div class="sct_img_name">
                                    <h3 class="img_title">Man Collection</h3>
                                    <p class="sub_title">Designed to stand the test of time</p>
                                </div>
                                <div class="sct_img_link">
                                    <img src="/theme_scita/static/src/img/arrow.svg" class="img img-fluid" alt='Link'/>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4 col-xl-3 sct_deal_mid_wrapper d-flex flex-column flex-md-row flex-lg-column">
                        <div class="sct_deal_timer_wrapper col-12 col-md-6 col-lg-12">
                            <div class="sct_timer_inner">
                                <div class="sct_deal_text"><span class="sct_per o_default_snippet_text">40%</span> Off</div>
                                <p class="sct_sub_title">Discover the best selling products of T90 stores.</p>
                                <div class="timer_counter_div"></div>
                            </div>
                        </div>
                        <div class="sct_deal_img_wrapper col-12 col-md-6 col-lg-12">
                            <div class="sct_deal_img">
                                <a href="/shop">
                                    <img src="/theme_scita/static/src/img/scita-placeholder.png" class="img img-fluid" alt="Image"/>
                                    <div class="sct_img_name">
                                        <h3 class="img_title">Man Collection</h3>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 sct_deal_img_wrapper">
                        <div class="sct_deal_img">
                            <a href="/shop">
                                <img src="/theme_scita/static/src/img/scita-placeholder.png" class="img img-fluid" alt="Image"/>
                                <div class="sct_img_name">
                                    <h3 class="img_title">Man Collection</h3>
                                    <p class="sub_title">Designed to stand the test of time</p>
                                    <div class='sct_deal_btn'>
                                        <a href="/shop" class="btn btn-primary">Shop Now</a>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
     <!-- Fashion deal of the day -->
    <template id="deal_of_day_banner_3" name="Deal of the Day Snippet 4">
        <section class="deal_of_day_banner_3 oe_img_bg" style="background-image: url('/web/image/theme_scita.sct_deal_snippet_4');" data-disp="deal_days">
            <div class="container">
                <div class='row'>
                    <div class="col-lg-6 col-md-8 sct_text_left">
                    	<div class='sct_base_class'>
	                        <div class='sct_text_content'>
	                            <h2 class="sct_title"><span class='sct_per'>40%</span><span class='text'>off</span></h2>
	                            <p class='sct_simple_text'>
	                                Discover the best selling products of T90 stores. All the products are listed weekly in store, helping customers capture products are best sellers.
	                            </p>
	                        </div>
	                        <div class="timer_counter_div"></div>
	                        <div class='sct_deal_btn'>
	                            <a href="/shop" class="btn btn-primary scita_cstm_btn ">Shop Now</a>
	                        </div>
	                    </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
    <template id="deal_of_day_banner_5" name="Deal of the Day Snippet 5">
        <section class="deal_of_day_banner_5" data-disp="deal_days">
            <div class="container">
                <div class='row deals_day'>
                    <div class="col-md-6 sct_img_box">
                        <a href="/shop">
                            <img src="/web/image/theme_scita.sct_deal_snippet_3" class="img img-fluid" alt="For Men Offer"/>
                        </a>
                    </div>
                    <div class="col-md-6 sct_content_box">
                        <div class='sct_text_content'>
                            <h2 class="sct_title">Deal of the day</h2>
                        </div>
                        <div class="timer_counter_div"></div>
                        <div class='sct_button'>
                            <a href="/deals-of-the-day" class="btn btn-primary">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>