<odoo>
 <!-- views/image_hotspot_template.xml -->
<template id="image_hotspot_snippet" class="image_hotspot_section" name="Image Hotspot Snippet">
  <t t-if="record">
    <div class="container">
      <div class="image_hotspot_box">
        <img t-att-src="'data:image/png;base64,' + record['image']" />
        <t t-foreach="record['hotspot_ids']" t-as="point">
          <a t-if="point.link"
             t-att-href="point.link"
             target="_blank"
             t-att-style="'position: absolute; top: {}%; left: {}%; transform: translate(-50%, -50%); text-decoration: none;'.format(point.y, point.x)">
            <div class="ripple-btn" title="Click to visit">
              <span class="ripple-circle"></span>
            </div>
          </a>
        </t>
      </div>
    </div>
  </t>
</template>
</odoo>
