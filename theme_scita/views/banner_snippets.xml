<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="sct_banner_1" name="Banner Slider 1">
        <section data-disp='banner' class="sct_banner_1 s_carousel_wrapper">
            <div id="myCarousel" class="s_carousel s_carousel_default carousel slide" data-bs-interval="10000">
                <div class="carousel-inner">
                    <!-- #01 -->
                    <div class="carousel-item active" data-name="Slide">
                        <div class="row content p-4 oe_custom_bg oe_img_bg" style="background-image:url('/theme_scita/static/src/img/banner-home5.png')">
                                <div class='col-lg-12 col-md-12 col-sm-12' >
                                    <div class="container">
                                        <div class="carousel-content">
                                            <div class="sct_title">
                                                <span class="banner-sub-title">We Are The Best Fashion Shop</span>
                                                <h2 class="banner-title">Elegant Look Of<br/>Clothes That Shines</h2>
                                            </div>
                                            <div class="sct_line_btn">
                                                <a href="/contactus" class="btn btn-primary scita_cstm_btn ">Shop Now</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>       
                                     
                    </div>
                     <!-- #02 -->
                    <div class="carousel-item active" data-name="Slide">
                            <div class="row content p-4 oe_custom_bg oe_img_bg" style="background-image:url('/theme_scita/static/src/img/smiley-woman-with-clothes-medium-shot.jpg')">
                                <div class='col-lg-12 col-md-12 col-sm-12' >
                                    <div class="container">
                                        <div class="carousel-content">
                                            <div class="sct_title">
                                                <span class="banner-sub-title">Wear confidence, own the moment.</span>
                                                <h2 class="banner-title">Your style, your story</h2>
                                            </div>
                                            <div class="sct_line_btn">
                                                <a href="/contactus" class="btn btn-primary scita_cstm_btn ">Shop Now</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>       
                                    
                    </div>
                
                </div>
               <div class="carousel-control-prev" data-bs-target="#myCarousel" data-bs-slide="prev" role="img" aria-label="Previous" title="Previous">
                    <span class="carousel-control-prev-icon"/>
                    <span class="sr-only">Previous</span>
                </div>
                <div class="carousel-control-next" data-bs-target="#myCarousel" data-bs-slide="next" role="img" aria-label="Next" title="Next">
                    <span class="carousel-control-next-icon"/>
                    <span class="sr-only">Next</span>
                </div>
                <ol class="carousel-indicators o_hidden">
                    <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
                    <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
                    <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
                </ol>
            </div>
        </section>
    </template>
    <template id="sct_banner_2" name="Banner Slider 2">
        <section data-disp='banner' class="sct_banner_2 s_text_cover">
            <div class="container">
                <div class="row sct_banner_row">
                    <section class="col-md-7 col-lg-8 banner_slider s_carousel_wrapper">
                        <div id="carouselExampleIndicators" class="s_carousel s_carousel_default carousel slide" data-bs-interval="10000">
                            <ol class="carousel-indicators">
                                <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
                                <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active oe_custom_bg oe_img_bg" style="background-image:url('/web/image/theme_scita.sct_banner_slider_image')" data-name="Slide">
                                    <div class="slider-content carousel-content">
                                        <p class="text-uppercase title-20">Special Offer</p>
                                        <h2 class="section-title-big"><span class="d-block">Real Time</span> Simple<span class="green-font"> Grocery</span></h2>
                                        <p class="title-26">Exclusive offer get upto <span class="theme-color">20% OFF</span> this week</p>
                                        <a href="#" alt-="Shop now" title="Shop now" class="btn btn-primary solid-btn">Shop now<span class="arrow"></span></a>
                                    </div>
                                </div>
                                <div class="carousel-item oe_custom_bg oe_img_bg" style="background-image:url('/web/image/theme_scita.sct_banner_slider_image_2')" data-name="Slide">
                                    <div class="slider-content carousel-content">
                                        <p class="text-uppercase title-20">Special Offer</p>
                                        <h2 class="section-title-big"><span class="d-block">Real Time</span> Simple<span class="green-font"> Grocery</span></h2>
                                        <p class="title-26">Exclusive offer get upto <span class="theme-color">20% OFF</span> this week</p>
                                        <a href="#" alt-="Shop now" title="Shop now" class="btn btn-primary  solid-btn">Shop now<span class="arrow"></span></a>
                                    </div>
                                </div>
                            </div>
                            <!-- Controls -->
                            <a class="carousel-control-prev o_not_editable" contenteditable="false" href="#carouselExampleIndicators" data-bs-slide="prev" role="img" aria-label="Previous" title="Previous">
                                <span class="carousel-control-prev-icon"/>
                                <span class="visually-hidden">Previous</span>
                            </a>
                            <a class="carousel-control-next o_not_editable" contenteditable="false" href="#carouselExampleIndicators" data-bs-slide="next" role="img" aria-label="Next" title="Next">
                                <span class="carousel-control-next-icon"/>
                                <span class="visually-hidden">Next</span>
                            </a>
                        </div>
                    </section>
                    <div class="col-md-5 col-lg-4 sct_deal_main">
                        <div class="sct_deal_inner d-flex flex-column">
                            <section class="sct_top_deal oe_custom_bg oe_img_bg" style="background-image: url('/web/image/theme_scita.sct_top_deal_cold_drinks'); background-position: 100% 0;">
                                <a href="/shop" class="top-deal-content">
                                    <p class="title-20 text-uppercase">Top Deal</p>
                                    <h3 class="title-30">Juicy <span class="green-font">Cold Drinks</span> </h3>
                                        <p class="title-26">Get upto <span class="theme-color">15% OFF</span> </p>
                                </a>
                            </section>
                            <section class="sct_top_deal oe_custom_bg oe_img_bg o_colored_level o_cc o_cc1" style="background-image: url('/web/image/theme_scita.sct_top_deal_bakery'); background-position: 100% 0;">
                                <a href="/shop" class="top-deal-content">
                                    <p class="title-20 text-uppercase">Top Deal</p>
                                    <h3 class="title-30"><span class="green-font"> Bakery </span> Items</h3>
                                        <p class="title-26">Get upto <span class="theme-color">15% OFF</span> </p>
                                </a>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template> 

