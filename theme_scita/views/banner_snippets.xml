    <!-- IT Promotional Services Banner -->
    <template id="it_main_banner" name="Banner Snippet 1">
        <section class="it_main_banner" data-disp='banner'>
           <div class="container-fluid">
                            <div class="row content flex-row-reverse">
                                <div class="col-md-6 col-lg-5 left-content o_colored_level">
                                    <div class="banner-content d-flex h-100 flex-column justify-content-center">
