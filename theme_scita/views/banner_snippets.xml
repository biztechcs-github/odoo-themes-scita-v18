    <template id="theme_scita_image_hotspot_view" name="Image Hotspot">
            <div class="container">
                <div class="row top-row title-block section-title-wrapper">
                    <h2 class="col-md-12 section-title" t-if="not slider_header">
                        Image Hotspot
                    </h2>
                    <h2 class="col-md-12 section-title" t-if="slider_header">
                        <t t-esc="slider_header.name"/>
                    </h2>
                </div>
                <div class="row">
                <div class="col-md-12">
                    <!-- Wrapper containing both image and hotspots -->
                        <div style="width: 100%; max-width: 500px; position: relative;" class="hotspot-wrapper image_hotspot_box">
                        <!-- Responsive Full Width Image -->
                        <img
                                t-att-src="website.image_url(slider_header, 'image')"
                                style="width: 100%; height: auto; display: block;" />
                        <!-- Hotspots -->
                        <t t-foreach="slider_details" t-as="point">
                            <div
                                t-att-style="'position: absolute; top: ' + str(point.y) + '%; left: ' + str(point.x) + '%; transform: translate(-50%, -50%); text-decoration: none;'"
                                class="hotspot-tooltip-wrapper"
                            >
                                <div
                                    class="ripple-btn"
                                    tabindex="0"
                                    data-bs-toggle="popover"
                                    data-bs-placement="auto"
                                    data-bs-html="true"
                                    data-bs-trigger="hover focus"
                                    data-bs-container="body"
                                    t-att-data-bs-content="
                                        '&lt;div class=&quot;hotspot-tooltip&quot;&gt;' +
                                            '&lt;div class=&quot;hotspot_box&quot;&gt;' +
                                                '&lt;div class=&quot;hotspot-product-img&quot;&gt;' +
                                                    (('&lt;img src=&quot;/web/image/product.template/' + str(point.product_id.id) + '/image_1920&quot; /&gt;') if point.product_id.image_1920 else '') +
                                                    '&lt;div class=&quot;hotspot_product_content&quot;&gt;' +
                                                        '&lt;a href=&quot;/shop/product/' + str(point.product_id.id) + '&quot; target=&quot;' + ('_blank' if point.open_in_new_tab else '_self') + '&quot;&gt;' +
                                                            point.product_id.name +
                                                        '&lt;/a&gt;' +
                                                        '&lt;p class=&quot;hotspot-price&quot;&gt;' +
                                                            website.currency_id.symbol + ' ' + str(point.product_id.list_price) +
                                                            (
                                                                ' &lt;span class=&quot;text-muted text-decoration-line-through ms-2&quot;&gt;' +
                                                                website.currency_id.symbol + ' ' + str(point.product_id.compare_list_price) +
                                                                '&lt;/span&gt;'
                                                                if point.product_id.compare_list_price and point.product_id.compare_list_price > point.product_id.list_price else ''
                                                            ) +
                                                        '&lt;/p&gt;' +
                                                    '&lt;/div&gt;' +
                                                '&lt;/div&gt;' +
                                                '&lt;a href=&quot;/shop/cart&quot; class=&quot;btn&quot;&gt;&lt;i class=&quot;lni lni-cart-1&quot;&gt;&lt;/i&gt;&lt;/a&gt;' +
                                            '&lt;/div&gt;' +
                                        '&lt;/div&gt;'"
                                >
                                    <t t-set="point_color" t-value="point.color or '#ffffff'"/>
                                    <span
                                        class="ripple-circle"
                                        t-att-style="'background-color:' + point.color + ';'">
                                        <span class="ripple-circle-before" t-att-style="'border-color:' + point.color + ';'"></span>
                                        <span class="ripple-circle-after" t-att-style="'border-color:' + point.color + ';'"></span>
                                    </span>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
            </div>
    </template>
