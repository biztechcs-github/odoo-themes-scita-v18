    <!-- for Dynamic Video Banner snippets -->
    <template id="dynamic_video_banner" name="Dynamic Video Banner 1">
        <section class="dynamic_video_banner" data-video-url=''  data-disp='banner'>
            <div class="container" >
                <div class="row sct-video-row">
                    <div class="col-md-12">
                        <h3 class="section-title style1">
                            <span>Video banner</span>
                        </h3>
                    </div>
                </div>
            </div>
        </section>
    </template>
    <template id="dynamic_video_option" inherit_id="website.snippet_options" name="Video Modify Options">
        <xpath expr="//div" position="after">
            <div data-js="dynamic_video_banner" data-selector=".dynamic_video_banner" data-snippet-option-id="dynamic_video_banner">
                <we-button class="dropdown-item dynamic_video_banner" tabindex="-1" href="#" data-dynamic_video_banner="">Modify</we-button>
            </div>
        </xpath>
    </template>
    <template id="sct_dynamic_banner_video_1" name="Video Banner 11">
        <section class="dynamic_video_banner">
            <t t-if="video_url">
                <video width="100%" height="100%" autoplay="true" loop="infinite" muted="true">
                    <source t-att-src="video_url"/>
                </video>
            </t>
        </section>
    </template>
    <!-- for Dynamic Video Banner snippets end -->
  
</odoo>