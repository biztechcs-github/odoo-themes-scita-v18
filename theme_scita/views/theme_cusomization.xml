                       data-name="btn_style_8"
                       data-customize-website-variable="'btn_style_8'"
                       data-img="/theme_scita/static/src/img/snippet_icon/button-style-8.gif"/>
            </we-select>
            <we-select string="Product Hover Style" data-variable="prod-hover-style" data-reload="/"  data-attribute-default-value="prod_hover_style_1">
